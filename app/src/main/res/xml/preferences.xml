<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:defaultValue="@string/apptheme"
        android:entries="@array/pref_theme_entries"
        android:entryValues="@array/pref_theme_entryValues"
        android:key="pref_key_theme"
        android:summary="@string/set_color_scheme"
        android:title="Theme" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="pref_storage_dir"
        android:summary="Save your notes and read from SD card"
        android:switchTextOff="internal"
        android:switchTextOn="external"
        android:title="External Storage" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="pref_alarm_wake_up"
        android:summary="Your device will automatically wake up after receiving notification"
        android:switchTextOff="@string/no"
        android:switchTextOn="@string/yes"
        android:title="Wake up on notification" />

</PreferenceScreen>